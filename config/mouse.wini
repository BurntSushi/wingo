$OPACITY_UP := Shell "transset-df -p --max 1.0 --inc 0.05"
$OPACITY_DOWN := Shell "transset-df -p --min 0.1 --dec 0.05"

[Root]
1 := Focus ":mouse:"

[Client]
1 := FocusRaise ":mouse:"

[Frame]
Mod4-1 := MouseMove
Mod4-3 := MouseResize "Infer"
Mod4-4 up := $OPACITY_UP
Mod4-5 up := $OPACITY_DOWN

[FullIcon]
1 := MouseMove
1 := FocusRaise ":mouse:"
3 := MouseResize "Infer"
Mod4-4 up := $OPACITY_UP
Mod4-5 up := $OPACITY_DOWN

[FullTitleText]
1 := MouseMove
1 := FocusRaise ":mouse:"
3 := MouseResize "Infer"
