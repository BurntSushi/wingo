Mod4-5 up := $OPACITY_DOWN

[FullClose]
1 up := Close ":mouse:"
Mod4-4 up := $OPACITY_UP
Mod4-5 up := $OPACITY_DOWN

[FullMaximize]
1 up := MaximizeToggle ":mouse:"
Mod4-4 up := $OPACITY_UP
Mod4-5 up := $OPACITY_DOWN

[FullMinimize]
1 up := IconifyToggle ":mouse:"
